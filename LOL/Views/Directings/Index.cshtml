@model IEnumerable<LOL.Models.ViewModels.DirectingListViewModel>

@{
    ViewBag.Title = "Index";
}
<h2>Directors</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
    {
        <div class="col-3 tile">
            <div class="container personTile">
                <div class="row">
                    <div class="col-6">
                        <h5>
                            <!-- actor name link to bio-->
                            <a href="@Url.Action("Details","Persons",
                            new { Id=item.Director.PersonId})">
                                @Html.DisplayFor(modelItem => item.Director.PersonFname)
                                @Html.DisplayFor(modelItem => item.Director.PersonSname)
</a>
                        </h5>
                    </div>
                    <div class="col-6">
                        @if (item.Director.PersonImage != null)
                    {
                        <img src="@Url.Content(item.Director.PersonImage)" width="100" height="140"/>
                }
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        @if (item.Film.FilmImage != null)
                    {
                        <img src="@Url.Content(item.Film.FilmImage)" width="100" height="140" />
                }
                    </div>
                    <div class="col-6">

                        <h5>
                            <!-- turn film title to link also-->
                            <a href="@Url.Action("Details","Films",
                            new { Id=item.Film.FilmId})">
                                @Html.DisplayFor(modelItem => item.Film.FilmTitle)</a>
                        </h5>
                    </div>
                </div>
           
                @Html.ActionLink("Edit", "Edit", new { id = item.DirectingCredit.DirectingId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.DirectingCredit.DirectingId })
            </div>
        </div>
        }
    </div>
</div>