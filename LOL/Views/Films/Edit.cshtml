@model LOL.Models.Film

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Film</h2>


@using (Html.BeginForm("Edit", "Films", null, FormMethod.Post,
    new { enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
   
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.FilmId)

    <div class="form-group1">
        @Html.LabelFor(model => model.FilmTitle, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.FilmTitle, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FilmTitle, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group2">
        @Html.LabelFor(model => model.FilmSequel, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.FilmSequel, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FilmSequel, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group1">
        @Html.LabelFor(model => model.FilmBBFC, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.FilmBBFC, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FilmBBFC, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group2">
        @Html.LabelFor(model => model.FilmDesc, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.FilmDesc, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FilmDesc, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group1">
        @Html.LabelFor(model => model.FilmReleaseDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FilmReleaseDate, "{0:yyyy-MM-dd}", htmlAttributes: new { @type = "date" })
            @Html.ValidationMessageFor(model => model.FilmReleaseDate, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group2">
        @Html.LabelFor(model => model.FilmTrailer, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.FilmTrailer, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FilmTrailer, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group1">
        @Html.Label("Image", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" id="Image" name="upload" />
        </div>
    </div>

    <div class="form-group2">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn actionBtn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
