@model IEnumerable<LOL.Models.ViewModels.ActingListViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Actors</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="container-fluid">
    <div class="row">
       
            @foreach (var item in Model)
             {
        <div class="col-3 tile">
            <div class="container personTile">
                <div class="row">
                    <div class="col-6">
                        <h5>
                            <!-- actor name link to bio-->
                            <a href="@Url.Action("Details","Persons",
                            new { Id=item.Actor.PersonId})">
                                @Html.DisplayFor(modelItem => item.Actor.PersonFname)
                                @Html.DisplayFor(modelItem => item.Actor.PersonSname)
                            </a>
                        </h5>
                    </div>
                    <div class="col-6">
                        @if (item.Actor.PersonImage != null)
            {
                <img src="@Url.Content(item.Actor.PersonImage)" width="100" height="140" />
}
                    </div>
                </div>
                <div class="row">

                    <div class="col-6">

                        @if (item.Film.FilmImage != null)
        {
                <img src="@Url.Content(item.Film.FilmImage)" width="100" height="140" />
}
                    </div>
                    <div class="col-6">
                   
                        <h5>
                            <!-- turn film title to link also-->
                            <a href="@Url.Action("Details","Films",
                            new { Id=item.Film.FilmId})">
                                @Html.DisplayFor(modelItem => item.Film.FilmTitle)
                                </a>
                        </h5>
                </div>
            </div>

                @Html.ActionLink("Edit", "Edit", new { id = item.ActingCredit.ActingId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ActingCredit.ActingId })
            </div>
                </div>

             }
            </div>
        </div>

