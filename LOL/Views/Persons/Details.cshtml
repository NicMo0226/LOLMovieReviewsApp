@model LOL.Models.Person

@{
    ViewBag.Title = "Details";
}

<h4 class="pageTitle">Person Details</h4>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-5">
            <div class="container nxtSect pImage">
                <li class="name">
                    <h1>
                        @Html.DisplayFor(model => model.PersonFname)
                        @Html.DisplayFor(model => model.PersonSname)
                    </h1>
                                                 <h4 class="undertitle">
                        @Html.DisplayNameFor(model => model.DateOfBirth)
                        @Html.DisplayFor(model => model.DateOfBirth)
                    </h4>
                </li>
                @if (Model.PersonImage != null)
    {
            <img class="img-responsive" src="@Url.Content(Model.PersonImage)" width="250" />
}
            </div>
        </div>

        <div class="col-md-7">
            <div class="container nxtSect info">
                              <dl class="dl-horizontal">
                    <dt class="bio">
                        <h4> @Html.DisplayNameFor(model => model.PersonDesc)</h4>
                    </dt>

                    <dd class="desc">
                        @Html.DisplayFor(model => model.PersonDesc)
                    </dd>

                </dl>
            </div>
        </div>
    </div>

</div>
<div class="row">
    <div class="container-fluid">
        <div class="col-12">
            
                <p class="nxtSect">
                    @Html.ActionLink("Edit", "Edit", new { id = Model.PersonId })    |
                    @Html.ActionLink("Add Actor", "Create", "Actings",
                                                           new { subName = "Person", PersonId = Model.PersonId }, null)    |


                    @Html.ActionLink("Back to List", "Index")
                </p>
            </div>
        </div>
    </div>
