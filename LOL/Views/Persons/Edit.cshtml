@model LOL.Models.Person

@{
    ViewBag.Title = "Edit";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2>Edit Person</h2>


            @using (Html.BeginForm("Edit", "Persons", null, FormMethod.Post,
            new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.PersonId)

                    <div class="form-group1">
                        @Html.LabelFor(model => model.PersonFname, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.PersonFname, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PersonFname, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group2">
                        @Html.LabelFor(model => model.PersonSname, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.PersonSname, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PersonSname, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group1">
                        @Html.LabelFor(model => model.PersonDesc, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.PersonDesc, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PersonDesc, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group2">
                        @Html.LabelFor(model => model.DateOfBirth, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.DateOfBirth, "{0:yyyy-MM-dd}", htmlAttributes: new { @type = "date" })
                            @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group1">
                        @Html.Label("Image", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="file" id="Image" name="upload" />
                        </div>
                    </div>
                    <br />
                    <div class="form-group2">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn actionBtn btn-default" />
                        </div>
                    </div>
                </div>
            }
            <br />
        </div>
    </div>
</div>
<div class="container-fluid ">
    <div class="row">
        <div class="col-12 editLinks">
        @Html.ActionLink("Back to List", "Index")
</div>
</div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
